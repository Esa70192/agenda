<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/listImage"
            android:src="@drawable/perfil_contacto"
            android:scaleType="centerCrop"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/listUnidadAprendizaje"
            android:text="Unidad de"
            android:textSize="20sp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@id/listImage"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/listSecuencia"
            android:text="#NM#"
            android:textSize="16sp"
            android:layout_toEndOf="@id/listUnidadAprendizaje"
            android:layout_marginTop="25dp"
            android:layout_marginStart="100dp" />

        <TextView
            android:id="@+id/listbibliografia"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="25dp"
            android:textSize="16sp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/listprofesor"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="25dp"
            android:textSize="16sp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/listautor"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="25dp"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/listeditorial"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="25dp"
            android:textSize="16sp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/listTitulo"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="25dp"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/secuenciaData"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="25dp"
            android:textSize="16sp"
            android:visibility="gone" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>